{
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "plugins": [
       "vue",
       "html",
       "jest"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "extends": [
        "plugin:vue/recommended",
        "eslint:recommended",
        "plugin:jest/recommended",
        "plugin:jest/style",
        "prettier" 
    ],
    "rules": {
        "vue/max-attributes-per-line": [1,
            {
                "singleline": 4,
                "multiline": {
                    "max": 1,
                    "allowFirstLine": true
                }
            }
        ],
        "vue/html-self-closing": ["error", {
            "html": {
              "void": "always",
              "normal": "always",
              "component": "always"
            },
            "svg": "always",
            "math": "always"
          }],
        "vue/singleline-html-element-content-newline": "off"
    }
}